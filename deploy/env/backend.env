# Spring Boot runtime env vars (production override as needed)
TZ=Asia/Shanghai
SPRING_PROFILES_ACTIVE=prod

# JWT
JWT_SECRET=please-change-this-to-a-32-byte-secret-key
JWT_EXPIRATION_MINUTES=120

# Upload limits:
# - Single file: 20MB
# - Total request body: 25MB
MAX_FILE_SIZE=20MB
MAX_REQUEST_SIZE=25MB

# AI
AI_PROVIDER=qwen
DASHSCOPE_API_KEY=please-set-your-dashscope-key
QWEN_MODEL=qwen-plus
QWEN_SYSTEM_PROMPT_FILE=/app/config/prompts/ai-system-prompt-v2.md
AI_SESSION_MAX_USER_MESSAGES=5

# AI debug log
AI_DEBUG_LOG_ENABLED=true
AI_DEBUG_LOG_INCLUDE_FULL_RESPONSE=true
